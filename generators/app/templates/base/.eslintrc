{
  "extends": "google",

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "no-multiple-empty-lines": ["error", {"max": 2}],
    "curly": ["error", "multi"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["off"],
    "arrow-parens": ["error", "always"],
    "func-call-spacing": ["error", "never"],
    "brace-style": ["off"],
    "no-invalid-this": ["off"]
  }
}
