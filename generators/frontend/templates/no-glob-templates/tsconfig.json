{
  "compilerOptions": {
    "allowJs": true,
    "diagnostics": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "skipLibCheck": true
  },
  "compileOnSave": false,
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
